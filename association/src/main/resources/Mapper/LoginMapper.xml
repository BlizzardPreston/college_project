<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.association.mapper.LoginMapper">
<select id="getuserbylogin" resultType="com.association.emtity.user">
    select * from user where studentID=#{id} and userPassword=#{pw}
</select>
    <select id="getuserbyid" resultType="com.association.emtity.user">
         select * from user where studentID=#{id}
    </select>
    <select id="getMapByID" resultType="com.association.emtity.user">
        select *
        from
        auth a,user u where u.studentID=#{id} and u.authID=a.authID
    </select>
    <select id="chackUserAuthInfo" resultType="String">
        select a.authInfo
        from
        auth a,user u where u.studentID=#{id} and u.authID=a.authID
    </select>
    <select id="getUserByName" resultType="com.association.emtity.user">
        select * from user where userName=#{name}
    </select>


</mapper>