<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.association.Dao.ActivityDao">
<select id="getActivityByClubID" resultType="com.association.entity.Activity">
    select * from activity where clubID=#{cid}
</select>
    <insert id="WriteActivity" parameterType="com.association.entity.Activity">
        insert into activity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="activityID != null">
                activityID,
            </if>
            <if test="clubID != null">
                clubID,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="text != null">
                text,
            </if>
            <if test="imgURL != null">
                imgURL,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="activityTime != null">
                activityTime,
            </if>
            <if test="datetime != null">
                datetime,
            </if>
            <if test="state != null">
                state,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="activityID != null">
                #{activityID,jdbcType=INTEGER},
            </if>
            <if test="clubID != null">
                #{clubID,jdbcType=INTEGER},
            </if>
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="text != null">
                #{text,jdbcType=VARCHAR},
            </if>
            <if test="imgURL != null">
                #{imgURL,jdbcType=VARCHAR},
            </if>
            <if test="address != null">
                #{address,jdbcType=VARCHAR},
            </if>
            <if test="activityTime != null">
                #{activityTime,jdbcType=VARCHAR},
            </if>
            <if test="datetime != null">
                #{datetime,jdbcType=TIMESTAMP},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <select id="getAllActivityList" resultType="com.association.entity.Activity">
        select * from activity
    </select>
    <select id="getActivityByState" resultType="com.association.entity.Activity">
        select * from activity where state=#{state}
    </select>
</mapper>